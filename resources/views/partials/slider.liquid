{% case modifier %}
    {% when 'hero' %}
    {% if slider %}
    <div class="slider slider--hero"
         data-slider-hero>
        {% for slide in slider %}
        {% assign thumbnail = slide.thumbnail %}
        <article class="slider__slider">
            <div class="slider__thumbnail">
                <figure class="slider__figure">
                    <img class="slider__image"
                         alt="{{ thumbnail.title | escape }}"
                         height="{{ thumbnail.height | escape }}"
                         src="{{ thumbnail.url }}"
                         title="{{ thumbnail.title | escape }}"
                         width="{{ thumbnail.width | escape }}">
                </figure>
            </div>
        </article>
        {% endfor %}
    </div>
    {% endif %}
{% endcase %}
