<aside class="cookies">
    <div class="cookies__container">
        <p class="cookies__message">{{ cookies.message }}</p>
        <button class="cookies__close"
                title="{{ cookies.close | escape }}"
                type="button"
                data-ripple>
            <span class="cookies__text">{{ cookies.close }}</span>
            <svg class="cookies__icon">
                <use href="#symbol-times"/>
            </svg>
        </button>
    </div>
</aside>
