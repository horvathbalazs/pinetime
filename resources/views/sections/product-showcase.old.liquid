<section class="showcase">
    <div class="showcase__container">
        <div class="showcase__row">
            <div class="showcase__column">
                <h2 class="showcase__title">{{ showcase.title }}</h2>
                {%
                    include 'sections.product-slider' with
                    modifier: 'showcase',
                    slider: showcase.slider
                %}
            </div>
            <div class="showcase__column">
                {%
                    include 'sections.product-features' with
                    features: showcase.features
                %}
            </div>
        </div>
    </div>
</section>
