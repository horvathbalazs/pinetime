{% case modifier %}
    {% when 'primary' %}
    <header class="header header--primary"
            data-header="primary">
        <div class="header__container">
            {%
                include 'sections.layout-sandwich' with
                sandwich: header.sandwich
            %}
            {%
                include 'sections.layout-drawer' with
                drawer: header.drawer
            %}
            {%
                include 'sections.layout-logo' with
                modifier: 'header',
                logo: header.logo
            %}
            {%
                include 'sections.layout-navigation' with
                modifier: 'header-primary',
                navigation: header.navigation
            %}
            <button class="header__cart"
                    title=""
                    type="button"
                    data-ripple>
                <svg class="header__icon">
                    <use href="#symbol-cart"/>
                </svg>
            </button>
        </div>
    </header>
    {% when 'secondary' %}
    <header class="header header--secondary">
    </header>
{% endcase %}

