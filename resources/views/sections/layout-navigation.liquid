<nav class="navigation navigation--{{ modifier }}"
     data-navigation="{{ modifier }}">
    {% for list in navigation %}
    <ul class="navigation__list">
        {% for link in list %}
        <li class="navigation__item{% if link.active %} navigation__item--active{% endif %}">
            <a class="navigation__link"
               href="{{ link.url }}"
               target="{{ link.target | escape }}"
               title="{{ link.title | escape }}"
               data-ripple>
                <span class="navigation__text">{{ link.title }}</span>
            </a>
        </li>
        {% endfor %}
    </ul>
    {% endfor %}
</nav>
